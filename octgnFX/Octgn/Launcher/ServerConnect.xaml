<Page x:Class="Octgn.Launcher.ServerConnect" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:l="clr-namespace:Octgn.Launcher" 
    WindowTitle="OCTGN - Connecting To Server" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="136" Width="640" Loaded="Page_Loaded">

   <Grid Height="136" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="136" />
        </Grid.RowDefinitions>
        <Border Style="{StaticResource Panel}" Grid.Row="1" Margin="8" VerticalAlignment="Top" Height="120">
            <Grid Height="121" VerticalAlignment="Top">
                <ProgressBar x:Name="progressBar" Visibility="Visible" Margin="5,33,0,0" ValueChanged="progressBar_ValueChanged" HorizontalAlignment="Left" Width="611" VerticalAlignment="Top" Height="25" IsIndeterminate="True" />
                <TextBlock Margin="6,6,130,91" Text="Connecting to server..." VerticalAlignment="Top" />
                <Button Content="Cancel" Margin="5" MinWidth="128" Name="btnCancel" HorizontalAlignment="Right" Width="134" VerticalAlignment="Bottom" />
            </Grid>
        </Border>
    </Grid>

</Page>
